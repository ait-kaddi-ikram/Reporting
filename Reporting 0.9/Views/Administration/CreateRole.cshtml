@model Reporting.ViewModels.AdministrationCreateRoleViewModel;

@{
    ViewData["Title"] = "Ajouter un nouveau Role";
}
<div class="container">
    <h1>Ajouter un nouveau Role</h1>

    <div class="row">

        <div class="col-md-12">
            <form method="post">




                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" style="width:500px"/>
                    <span asp-validation-for="RoleName" hidden class="text-danger"></span>
                </div>



                <button type="submit" class="btn-success mx-1">Ajouter</button>
                <a asp-action="ListRols" class="btn btn-sm btn-primary mx-3">Retour à la liste</a>
                <div class="form-group">

                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </form>

        </div>
    </div>
</div>
