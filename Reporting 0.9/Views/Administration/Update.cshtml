@model Reporting.ViewModels.EditRoleViewModel;

@{
    ViewData["Title"] = "Modifier un Rôle";
}
<div class="container">
    <h1>Modifier Le Rôle : @Model.RoleName</h1>

    <div class="row">

        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>



                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" hidden class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-dark mx-3"  style="width:100px;">Valider</button>
                    <a asp-action="ListRols" class="btn btn-sm btn-primary mx-3" style="width:100px;">Annuler</a>
                </div>



                @if (Model.Users.Count == 0)
                {
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title"> La liste des Utilisateurs</h5>
                            <p class="card-text">pas d'utilisateur</p>
                            <div class="text-white">

                                <a asp-action="EditUserRole" asp-route-idRole="@Model.Id" class="btn btn-sm my auto btn-secondary mx-1">Ajouter/Supprimer Un Utilisateur</a>
                                <a asp-action="ListRols" class="btn btn-sm btn-danger mx-3">Retour à la liste</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title"> La liste des Utilisateurs</h5>


                            @foreach (string userEmail in Model.Users)
                            {
                                <p class="card-text">
                                    <span class="text-danger"> @userEmail<br /></span>

                                </p>

                            }
                            <div class="text-white">

                                <a asp-action="EditUserRole" asp-route-idRole="@Model.Id" class="btn btn-sm my auto btn-secondary mx-1">Ajouter/Supprimer Un Utilisateur</a>
                                <a asp-action="ListRols" class="btn btn-sm btn-danger mx-3" >Retour à la liste</a>
                            </div>
                        </div>
                    </div>

                }
            </form>

        </div>
    </div>

</div>