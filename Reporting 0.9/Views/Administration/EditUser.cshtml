@model Reporting.ViewModels.AccountEditUserViewModel;

@{
    ViewData["Title"] = "Modifier l'utilisateur";
}
<div class="container">
<h1 class="my-5 text-center" >Modifier l'utilisateur : @Model.Email</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="Prenom"></label>
                <input asp-for="Prenom" class="form-control" style="width:500px" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom"></label>
                <input asp-for="Nom" class="form-control" style="width:500px" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" style="width:500px" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site"></label>
                <input asp-for="Site" class="form-control"  style="width:500px"/>
                <span asp-validation-for="Site" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direction"></label>
                <input asp-for="Direction" class="form-control" style="width:500px" />
                <span asp-validation-for="Direction" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Modifier</button>
                <a asp-action="ListUsers" asp-controller="Account" class="btn btn-danger">Annuler</a>
            </div>

            <div class="card">
                <div class="card-header">
                    <span class="display-3">les Rôles de l'utilisateur : @Model.Email</span>
                </div>
                <div class="card-body text-info text-center font-weight-bold">
                    @if (Model.Roles.Count == 0)
                    {

                        <span>Pas de Rôle</span>

                    }
                    else
                    {
                        <ol class="active">
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <li>
                                    <label disabled class="mx-1">@Model.Roles[i]</label>
                                </li>
                            }

                        </ol>
                    }
                </div>

                <div class="text-white card-footer">
                    <a asp-action="ManageUserRoles" asp-route-id="@Model.Id" asp-controller="Administration" class="btn btn-sm btn-primary">Gestioner les Rôles</a>
                </div>
            </div>



        </form>

    </div>
</div>
</div>
